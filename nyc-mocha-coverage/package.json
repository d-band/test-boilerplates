{
  "scripts": {
    "build": "rm -rf lib && BABEL_ENV=production babel --out-dir=lib src",
    "test": "NODE_ENV=development nyc mocha --compilers js:babel-register --no-timeouts",
    "report": "nyc report --reporter=html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "env": {
      "development": {
        "plugins": [ [ "__coverage__", { "only": "src/" } ] ]
      }
    }
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.5",
    "coveralls": "^2.11.9",
    "mocha": "^2.4.5",
    "nyc": "^7.0.0"
  }
}